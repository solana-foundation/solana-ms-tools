{
  "extends": "@solana-foundation/ms-tools-config/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "@testing-library/dom", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "jsx": "react-jsx"
  },
  "include": [
    "*.config.js",
    "*.config.mjs",
    "*.config.cjs",
    "*.config.ts",
    "*.js",
    "*.ts",
    "*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist", "storybook-static/**"]
}
