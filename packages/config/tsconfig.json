{
  "compilerOptions": {
    "types": ["node", "@testing-library/dom", "vitest/globals"],
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    ".next/types/**/*.ts",
    "*.config.js",
    "*.config.mjs",
    "*.config.cjs",
    "*.js",
    "*.ts",
    "*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
    ".storybook/*.ts"
  ]
}
