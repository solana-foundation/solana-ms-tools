{
  "name": "@solana/ms-tools",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "changeset": "changeset",
    "clear": "turbo run clear && rimraf node_modules .turbo",
    "manypkg": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "build:ci": "turbo run build:ci",
    "playwright:install": "pnpm -filter '*ui' playwright:install",
    "prepublish": "turbo run prepublish",
    "storybook": "turbo run storybook",
    "test": "pnpm run manypkg && browserslist-lint && turbo run test"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": "^20 || ^21 || ^22"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@manypkg/cli": "^0.24.0",
    "@solana/ms-tools-config": "workspace:^",
    "browserslist-lint": "^0.3.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "sugarss": "^5.0.0",
    "turbo": "^2.5.2",
    "typescript": "^5.5.3",
    "vitest": "^3.1.2"
  }
}
